<UserControl x:Class="TemperatureMonitorNew.SimpleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TemperatureMonitorNew"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="200" MinWidth="100">
    <Border BorderThickness="2" BorderBrush="Blue">
        <Grid Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Text="0000" Grid.Row="0" HorizontalAlignment="Center" FontSize="40"
                   Margin="0 10"/>
            <ProgressBar Grid.Row="1" Value="30" RenderTransformOrigin="0.5,0.5"
                     Margin="10 0" Orientation="Vertical"/>
        </Grid>
    </Border>
</UserControl>
